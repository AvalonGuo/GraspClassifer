<mujoco>
    <compiler angle="radian" texturedir="../textures" autolimits="true"/>
    <option timestep='0.0025' iterations="50" tolerance="1e-10" solver="Newton" jacobian="dense" cone="elliptic"/>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1=".50 .495 .48" rgb2=".50 .495 .48" width="32" height="32"/>
        <texture name="T_floor" type="2d" file="floor2.png"/>
        <texture name="metal"        type="cube"     file="metal4.png"/>

        <texture name="warning1" type="2d" file="warning1.png"/>
        <texture name="warning2" type="2d" file="warning2.png"/>
        <material name="basic_floor" texture="T_floor" texrepeat="12 12" shininess=".1" specular="0.5"
                  reflectance="0.2"/>


        <material name="bench_mat"      texture="metal"   shininess="0" specular="0.5" reflectance="0.2"/>
        <material name="warning_col1" texture="warning1" shininess="0" specular="0.5"/>
        <material name="warning_col2" texture="warning2" shininess="0" specular="0.5"/>
        <!-- <texture type="2d" name="calib_mat" builtin="checker" mark="edge" rgb1="1 1 1" rgb2="0 0 0"
        markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <material name="calib_mat" texture="calib_mat" texuniform="false" texrepeat="4 3" reflectance="0"/> -->
    </asset>
    <visual>
        <map fogstart="1.5" fogend="5" force="0.1" znear="0.01"/>
        <quality shadowsize="4096" offsamples="4"/>

        <headlight ambient="0.4 0.4 0.4"/>

    </visual>
    <worldbody>
        <body name="base_box" pos="0 0 -0.44">
            <geom size=".29 .19 .03" pos ="0 0 0.41" type="box" material="bench_mat"/>
            <geom size=".29 .19 .03" pos ="0 0 -0.2" type="box" material="bench_mat"/>
            <geom size=".04 .04 .44" pos =".26 .16 0" type="box" material="bench_mat"/>
            <geom size=".04 .04 .44" pos ="-.26 .16 0" type="box" material="bench_mat"/>
            <geom size=".04 .04 .44" pos =".26 -.16 0" type="box" material="bench_mat"/>
            <geom size=".04 .04 .44" pos ="-.26 -.16 0" type="box" material="bench_mat"/>
            <inertial pos="0 0 0" mass="1000" diaginertia="0 0 0" />
        </body>
        <body pos="0.0 0.6000000000000001 0.765">
            <camera name="pick_view"
                    mode="fixed"
                    focal="0.01 0.01"
                    sensorsize="0.007292 0.005208"
                    resolution="560 400"/>
        </body>
        <!--x ∈ [−0.28, 0.28]   y ∈ [0.4, 0.8] -->
        <body name="pick_box" pos="0 0.6 -.913">
            <!-- warning_col1: 原前后边条 -->
            <geom size=".025 .26 .015" pos="0.305 0 0.895" type="box" material="warning_col2"/>
            <geom size=".025 .26 .015" pos="-0.305 0 0.895" type="box" material="warning_col2"/>
            
            <!-- warning_col2: 原左右边条 -->
            <geom size=".28 .03 .015" pos="0 0.23 0.895" type="box" material="warning_col1"/>
            <geom size=".28 .03 .015" pos="0 -0.23 0.895" type="box" material="warning_col1"/>
            
            <!-- 主平台 -->
            <geom size=".28 .2 .03" pos="0 0 0.88" type="box" material="bench_mat"/>
            
            <!-- 竖杆（原左右） -->
            <geom size=".27 .03 .44" pos="0 0.23 0.44" type="box" material="bench_mat"/>
            <geom size=".27 .03 .44" pos="0 -0.23 0.44" type="box" material="bench_mat"/>
            
            <!-- 横杆（原前后） -->
            <geom size=".03 .26 .44" pos="-0.3 0 0.44" type="box" material="bench_mat"/>
            <geom size=".03 .26 .44" pos="0.3 0 0.44" type="box" material="bench_mat"/>
            
            <inertial pos="0 0 0" mass="1000" diaginertia="0 0 0" />
        </body>
        <!--x ∈ [0.4, 0.8]   y ∈ [-0.2, 0.4] -->
        <body pos="0.6000000000000001 0.1 0.5">
            <camera name="place_view"
                    mode="fixed"
                    focal="0.01 0.01"
                    sensorsize="0.005208 0.007813"
                    resolution="400 600"/>
        </body>
        <body name="drop_box" pos="0.6 0.1 -.913">
            <geom size=".26 .03 .01" pos ="0 -0.33 0.81" type="box" material="warning_col1"/>
            <geom size=".26 .03 .01" pos ="0 0.33 0.81" type="box" material="warning_col1"/>
            <geom size=".03 .3 .01" pos ="-0.23 0.0 0.81" type="box" material="warning_col2"/>
            <geom size=".03 .3 .01" pos ="0.23 0.0 0.81" type="box" material="warning_col2"/>
            <geom size=".2 .3 .03" pos ="0 0 0.615" type="box" material="bench_mat"/>
            <geom size=".03 .3 .4" pos ="0.23 0.0 0.4" type="box" material="bench_mat"/>
            <geom size=".03 .3 .4" pos ="-0.23 0.0 0.4" type="box" material="bench_mat"/>
            <geom size=".26 .03 .4" pos ="0.0 0.33 0.4" type="box" material="bench_mat"/>
            <geom size=".26 .03 .4" pos ="0.0 -0.33 0.4" type="box" material="bench_mat"/>
            <inertial pos="0 0 0" mass="1000" diaginertia="0 0 0" />
        </body>
        <geom name="floor" size="4 4 .1" pos="0 0 -.913" conaffinity="1" contype="1" type="plane" material="basic_floor"
              condim="3"/>
        <body name="mocap" pos="0 0.35 0.313" quat="0 -1 0 0"  mocap="true">
            <geom type="box" pos="0 0 0.015" size=".01 .01 .01" contype="0" conaffinity="0" rgba=".6 .3 .3 0.3"/>
        </body>
        <!-- <body name="calibration_board" pos="0 0.6 0" euler="0 0 0">
            <geom name="calib_plate" type="box" size="0.08 0.06 0.005" material="calib_mat"/>
        </body> -->
    </worldbody>
</mujoco>